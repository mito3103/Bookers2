<%= render partial:'books/book', locals: {user: @user,profile_image: @profile_image,book: @book }%>

  <div class="col-md-8 offset-md-1">
<h2>Books</h2>

<table class="table table-hover table-inverse">

<tbody>
    <% @books.each do |book|%>
  <tr>
    <td>
      <%= image_tag book.user.get_profile_image %>
    </td>
    <td><%= link_to book.title,book_path(book) %></td>
    <td><%= book.body %></td>
    <% end %>

  </tr>
</tbody>

</table>
      </div>
  </div>


</div>
</div>
</div>