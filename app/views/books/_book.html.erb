

  <div class="row">
    <div class="col-md-3">

<h1>User info</h1>
   <% if profile_image.attached? %>
     <%= image_tag profile_image,size:"200×200" %>
   <% else %>
     <%= image_tag 'no_image', size:"200×200" %>
   <% end %>


<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name<th>
      <th><%= name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= intro %></th>
    </tr>
  </tbody>
</table>

<div class="row">
<%= link_to  edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block' do %>
<i class="fas fa-user-cog"></i>
<% end %>
</div>


<h2 class="mt-3">New book</h2>
<%= form_with model:book  do |f| %>

  <div class="form-group">
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :Opinion %><br>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book',class: "btn btn-success"%>
  </div>
<% end %>
</div>


