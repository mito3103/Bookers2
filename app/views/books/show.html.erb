<%= render partial:'book', locals: {profile_image: @profile_image,book: @book, name: @name,intro: @intro,user: @user}%>

  <div class="col-md-8 offset-md-1">
<h2>Book detail</h2>

<table class="table table-hover table-inverse">

<tbody>
  <tr>
    <td>
      <%= image_tag @books.user.get_profile_image %><br>
      <%= link_to @books.user.name,user_path  %>
    </td>
    <td><%= link_to @books.title,book_path(@books) %></td>
    <td><%= @books.body %></td>
    <td>
      <% if @books.user == current_user %>
        <%= button_to 'Edit' ,{controller:'books',action:'edit'} , {method: :get,class: "btn btn-sm btn-success"}%>
      <% end %>
    </td>

    <td>
      <% if @books.user == current_user %>
        <%= button_to "Destroy", book_path(@books), method: :delete,class: "btn  btn-sm btn-danger" %>
      <% end %>
    </td>

  </tr>
</tbody>

</table>
      </div>
  </div>
</div>
</div>
</div>