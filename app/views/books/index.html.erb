
<h1>User info</h1>
   <% if @profile_image.attached? %>
     <%= image_tag get_profile_image,size:"200×200" %>
   <% else %>
     <%= image_tag 'no_image', size:"200×200" %>
   <% end %>


name
<h3><%= @user.name%></h3>
<h3><%= @user.introduction %></h3>



<%= button_to  edit_user_path(@user), method:  :post do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>




<h1>New Book</h1>
<%= form_with model:Book.new do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book'%>

<% end %>
